FROM mcr.microsoft.com/dotnet/sdk:9.0 as BUILD

RUN git clone --recurse-submodules https://github.com/Stellar-Sync/server

WORKDIR /server/StellarSyncServer/StellarSyncServices/

RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/StellarSyncServices \
        StellarSyncServices.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        stellar

COPY --from=BUILD /StellarSyncServices /opt/StellarSyncServices
RUN chown -R stellar:stellar /opt/StellarSyncServices
RUN apt-get update; apt-get install curl -y

USER stellar:stellar
WORKDIR /opt/StellarSyncServices

CMD ["./StellarSyncServices"]
