FROM mcr.microsoft.com/dotnet/sdk:9.0 as BUILD

RUN git clone --recurse-submodules https://github.com/Stellar-Sync/stellar-server

WORKDIR /stellar-server/StellarSyncServer/StellarSyncStaticFilesServer/

RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/StellarSyncStaticFilesServer \
        StellarSyncStaticFilesServer.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        stellar

COPY --from=BUILD /StellarSyncStaticFilesServer /opt/StellarSyncStaticFilesServer
RUN chown -R stellar:stellar /opt/StellarSyncStaticFilesServer
RUN apt-get update; apt-get install curl -y

USER stellar:stellar
WORKDIR /opt/StellarSyncStaticFilesServer

CMD ["./StellarSyncStaticFilesServer"]
