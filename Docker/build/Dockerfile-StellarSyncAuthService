FROM mcr.microsoft.com/dotnet/sdk:9.0 as BUILD

COPY StellarAPI /server/StellarAPI
COPY StellarSyncServer/StellarSyncShared /server/StellarSyncServer/StellarSyncShared
COPY StellarSyncServer/StellarSyncAuthService /server/StellarSyncServer/StellarSyncAuthService

WORKDIR /server/StellarSyncServer/StellarSyncAuthService/

RUN dotnet publish \
        --configuration=Debug \
        --os=linux \
        --output=/build \
        StellarSyncAuthService.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        stellar

COPY --from=BUILD /build /opt/StellarSyncAuthService
RUN chown -R stellar:stellar /opt/StellarSyncAuthService
RUN apt-get update; apt-get install curl -y

USER stellar:stellar
WORKDIR /opt/StellarSyncAuthService

CMD ["./StellarSyncAuthService"]
